        function Buscar() {
            $.ajax({
                url: "/Home/Data?year=" + $("#year").val() + "&query=" + $("#query").val()
            }).done(function (data) {
                $("#btable").empty()
                data.papers.forEach(function (paper) {
                    $("#btable").append("<tr><td>" + paper.Title + "</td><td>" + paper.Abstract + "</td></tr>");
